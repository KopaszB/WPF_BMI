<Window x:Class="WPF_BMI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_BMI"
        mc:Ignorable="d"
        Title="BMI Calculator" Height="450" Width="400">
    <Grid>
        <Label Content="Testtömegindex"
               Margin="0 20 0 0"
               VerticalAlignment="Top"
               HorizontalAlignment="Center"
               Width="auto"
               Height="auto"
               FontSize="28"
               FontWeight="Bold"/>
        
        <TextBlock Text="Magasság(cm):"
                   Margin="20 80 0 0"
                   Height="auto"
                   Width="auto"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   FontSize="16"
                   FontWeight="DemiBold"/>
        <TextBox   x:Name="tbx_magassag"
                   Text=""
                   Margin="140 80 0 0"
                   Height="25"
                   Width="50"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   FontSize="16"
                   FontWeight="DemiBold"/>

        <TextBlock Text="Testsúly(kg):"
                   Margin="20 120 0 0"
                   Height="auto"
                   Width="auto"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   FontSize="16"
                   FontWeight="DemiBold"/>
        <TextBox   x:Name="tbx_suly"
                   Text=""
                   Margin="140 120 0 0"
                   Height="25"
                   Width="50"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   FontSize="16"
                   FontWeight="DemiBold"/>

        <Button x:Name="btn_szamol"
                Content="Számol"
                Margin="0 200 0 0"
                Width="150"
                Height="40"
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                FontSize="20"
                FontWeight="Bold"
                Foreground="Green"/>

        <TextBlock Text="Az ön testtömegindexe:"
                   Margin="20 270 0 0"
                   Height="auto"
                   Width="auto"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   FontSize="16"
                   FontWeight="DemiBold"/>
        <TextBlock x:Name="tbl_tti"
                   Text=""
                   Margin="200 268 0 0"
                   Height="25"
                   Width="50"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   FontSize="16"
                   FontWeight="DemiBold"/>

        <TextBlock Text="Az ön eredménye:"
                   Margin="20 300 0 0"
                   Height="auto"
                   Width="auto"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   FontSize="16"
                   FontWeight="DemiBold"/>
        <TextBlock x:Name="tbl_eredmeny"
                   Text=""
                   Margin="160 298 0 0"
                   Height="25"
                   Width="200"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   FontSize="16"
                   FontWeight="DemiBold"/>


        <Button x:Name="btn_ujszamol"
                Content="Új számítás"
                Margin="0 350 0 0"
                Width="150"
                Height="40"
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                FontSize="20"
                FontWeight="Bold"
                Foreground="Red"/>
    </Grid>
</Window>
